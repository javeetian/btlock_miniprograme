<view class="container">
  <text style="color:gray;font-size:medium;margin-top:10px;margin-bottom:10px">旧密码</text>
  <input class="input" type="password" value="{{inputText}}" bindinput="bindInput" maxlength="6"/>
  <text style="color:gray;font-size:medium;margin-top:10px;margin-bottom:10px">新密码</text>
  <input class="input" type="password" value="{{inputText}}" bindinput="bindInput" maxlength="6"/>
  <text style="color:gray;font-size:medium;margin-top:10px;margin-bottom:10px">确认新密码</text>
  <input class="input" type="password" value="{{inputText}}" bindinput="bindInput" maxlength="6"/>
  <text style="font-size:medium;margin-top:10px">接收内容：</text>
  <input class="input" disabled value="{{receiveText}}" maxlength="20"/>
  <button type="primary" class="button" bindtap="Send">确认修改</button>
</view>